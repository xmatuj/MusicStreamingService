@model MusicStreamingService.Models.User
@{
    ViewData["Title"] = "Мой профиль";
}

<div class="container">
    <!-- Заголовок с кнопками действий -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Мой профиль</h2>
        <div>
            <a href="/" class="btn btn-outline-secondary">
                <i class="fas fa-home"></i> На главную
            </a>
            @if (User.IsInRole("Admin"))
            {
                <a href="/Admin" class="btn btn-warning ms-2">
                    <i class="fas fa-cog"></i> Админ панель
                </a>
            }
        </div>
        <div class="modal fade" id="subscriptionRequiredModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">
                            <i class="fas fa-crown me-2 text-warning"></i> Требуется подписка
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="text-center mb-4">
                            <div class="subscription-icon mb-3">
                                <i class="fas fa-star fa-4x text-warning"></i>
                            </div>
                            <h4>Функция доступна только подписчикам</h4>
                            <p class="text-muted">
                                Для создания плейлистов необходимо оформить подписку.
                                Подписчики получают доступ ко всем функциям сервиса.
                            </p>
                        </div>

                        <div class="subscription-plans">
                            <div class="plan-card mb-3">
                                <div class="plan-header bg-primary text-white p-3 rounded-top">
                                    <h5 class="mb-0">🎵 Премиум подписка</h5>
                                </div>
                                <div class="plan-body p-3 border">
                                    <ul class="list-unstyled mb-3">
                                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Создание неограниченного количества плейлистов</li>
                                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Добавление треков в плейлисты</li>
                                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Публичные и приватные плейлисты</li>
                                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Редактирование и сортировка плейлистов</li>
                                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Без рекламы</li>
                                        <li><i class="fas fa-check text-success me-2"></i> Высокое качество звука</li>
                                    </ul>
                                    <div class="text-center">
                                        <p class="h3 mb-2">₽399 <span class="text-muted small">/месяц</span></p>
                                        <a href="/Subscription/Plans" class="btn btn-primary w-100">
                                            <i class="fas fa-crown me-1"></i> Оформить подписку
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="row">
        <!-- Боковая панель с информацией о профиле -->
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-user-circle me-2"></i> Информация о профиле</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <!-- Аватарка в зависимости от роли -->
                        <div class="profile-avatar-large mb-3">
                            @if (Model.Role == MusicStreamingService.Models.UserRole.Admin)
                            {
                                <i class="fas fa-crown fa-4x"></i>
                            }
                            else if (Model.Role == MusicStreamingService.Models.UserRole.Musician)
                            {
                                <i class="fas fa-music fa-4x"></i>
                            }
                            else if (Model.Role == MusicStreamingService.Models.UserRole.Subscriber)
                            {
                                <i class="fas fa-star fa-4x"></i>
                            }
                            else
                            {
                                <i class="fas fa-user fa-4x"></i>
                            }
                        </div>

                        <h4 class="mb-2">@Model.Username</h4>

                        <!-- Бейдж роли -->
                        <span class="badge @GetRoleBadgeClass(Model.Role) badge-lg mb-2">
                            @GetRoleDisplayName(Model.Role)
                        </span>

                        <!-- Бейдж возможности загрузки треков -->
                        @if (Model.CanUploadTracks)
                        {
                            <div class="mt-2">
                                <span class="badge bg-success">
                                    <i class="fas fa-check-circle me-1"></i> Может загружать треки
                                </span>
                            </div>
                        }
                    </div>

                    <!-- Детали профиля -->
                    <div class="profile-details">
                        <div class="detail-item">
                            <i class="fas fa-envelope me-2 text-primary"></i>
                            <span class="detail-label">Email:</span>
                            <span class="detail-value">@Model.Email</span>
                        </div>

                        <div class="detail-item">
                            <i class="fas fa-calendar-alt me-2 text-primary"></i>
                            <span class="detail-label">Дата регистрации:</span>
                            <span class="detail-value">@Model.DateOfCreated.ToString("dd.MM.yyyy")</span>
                        </div>

                        <div class="detail-item">
                            <i class="fas fa-play-circle me-2 text-primary"></i>
                            <span class="detail-label">Плейлистов:</span>
                            <span class="detail-value">@Model.Playlists.Count</span>
                        </div>

                        <div class="detail-item">
                            <i class="fas fa-crown me-2 text-warning"></i>
                            <span class="detail-label">Статус подписки:</span>
                            @if (Model.HasActiveSubscription)
                            {
                                <span class="detail-value text-success">
                                    <i class="fas fa-check"></i> Активна
                                </span>
                            }
                            else
                            {
                                <span class="detail-value">
                                    <a href="/Subscription/Plans" class="text-primary">Оформить</a>
                                </span>
                            }
                        </div>
                    </div>

                    <!-- Быстрые действия -->
                    <div class="mt-4">
                        <!-- Кнопка подписки -->
                        @if (Model.HasActiveSubscription)
                        {
                            <a href="/Subscription/My" class="btn btn-warning w-100 mb-2">
                                <i class="fas fa-crown me-1"></i> Моя подписка (активна до @Model.Subscriptions.First(s => s.IsActivated && s.EndDate > DateTime.Now).EndDate.ToString("dd.MM.yyyy"))
                            </a>
                        }
                        else
                        {
                            <a href="/Subscription/Plans" class="btn btn-warning w-100 mb-2">
                                <i class="fas fa-crown me-1"></i> Оформить подписку
                            </a>
                        }

                        @if (Model.CanUploadTracks)
                        {
                            <a href="/Tracks/Create" class="btn btn-success w-100 mb-2">
                                <i class="fas fa-plus-circle me-1"></i> Добавить новый трек
                            </a>
                        }

                        <a href="/Account/Logout" class="btn btn-outline-danger w-100"
                           onclick="event.preventDefault(); document.getElementById('logoutForm').submit();">
                            <i class="fas fa-sign-out-alt me-1"></i> Выйти из системы
                        </a>

                        <form id="logoutForm" asp-controller="Account" asp-action="Logout" method="post" style="display: none;">
                            @Html.AntiForgeryToken()
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Основной контент -->
        <div class="col-md-8">
            <!-- Мои плейлисты -->
            <div class="card mb-4">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-list-music me-2"></i> Мои плейлисты</h5>
                    @if (Model.CanUploadTracks || Model.Role == UserRole.Subscriber || Model.Subscriptions.Any(s => s.IsActivated && s.EndDate > DateTime.Now))
                    {
                        <a href="/Playlists/Create" class="btn btn-sm btn-light">
                            <i class="fas fa-plus"></i> Создать плейлист
                        </a>
                    }
                    else
                    {
                        <button class="btn btn-sm btn-light" data-bs-toggle="modal" data-bs-target="#subscriptionRequiredModal">
                            <i class="fas fa-plus"></i> Создать плейлист
                        </button>
                    }
                </div>
                <div class="card-body">
                    @if (Model.Playlists.Any())
                    {
                        <div class="row">
                            @foreach (var playlist in Model.Playlists.OrderByDescending(p => p.CreatedDate).Take(6))
                            {
                                <div class="col-md-6 col-lg-4 mb-3">
                                    <a href="/Playlists/Details/@playlist.Id" class="text-decoration-none">
                                        <div class="playlist-card-small">
                                            <div class="playlist-cover-small @(!playlist.PlaylistTracks.Any() ? "empty-cover" : "")">
                                                <i class="fas fa-music"></i>
                                                @if (playlist.PlaylistTracks.Any())
                                                {
                                                    <span class="playlist-count-badge">
                                                        @playlist.PlaylistTracks.Count
                                                    </span>
                                                }
                                            </div>
                                            <div class="playlist-info-small">
                                                <h6 class="playlist-title-small text-dark mb-1">@playlist.Title</h6>
                                                <p class="playlist-meta-small text-muted mb-1">
                                                    <small>
                                                        @playlist.PlaylistTracks.Count треков
                                                        @if (playlist.Visibility == MusicStreamingService.Models.PlaylistVisibility.Public)
                                                        {
                                                            <i class="fas fa-globe-americas ms-2" title="Публичный плейлист"></i>
                                                        }
                                                        else
                                                        {
                                                            <i class="fas fa-lock ms-2" title="Приватный плейлист"></i>
                                                        }
                                                    </small>
                                                </p>
                                                @if (!string.IsNullOrEmpty(playlist.Description))
                                                {
                                                    <p class="playlist-desc-small text-muted mb-0">
                                                        <small>@(playlist.Description.Length > 50 ? playlist.Description.Substring(0, 50) + "..." : playlist.Description)</small>
                                                    </p>
                                                }
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            }
                        </div>

                        @if (Model.Playlists.Count > 6)
                        {
                            <div class="text-center mt-3">
                                <a href="/Playlists" class="btn btn-outline-primary">
                                    <i class="fas fa-arrow-right me-1"></i> Показать все плейлисты (@Model.Playlists.Count)
                                </a>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-music fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">У вас еще нет плейлистов</h5>
                            <p class="text-muted">Создайте свой первый плейлист и добавьте в него любимые треки</p>
                            @if (Model.CanUploadTracks || Model.Role == UserRole.Subscriber || Model.Subscriptions.Any(s => s.IsActivated && s.EndDate > DateTime.Now))
                            {
                                <a href="/Playlists/Create" class="btn btn-primary">
                                    <i class="fas fa-plus me-1"></i> Создать первый плейлист
                                </a>
                            }
                            else
                            {
                                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#subscriptionRequiredModal">
                                    <i class="fas fa-plus me-1"></i> Создать первый плейлист
                                </button>
                            }
                        </div>
                    }
                </div>
            </div>
            <!-- Бейдж подписки -->
            @if (Model.HasActiveSubscription)
            {
                <div class="mt-2">
                    <span class="badge bg-warning">
                        <i class="fas fa-crown me-1"></i> Премиум подписчик
                    </span>
                </div>
            }
            <!-- Недавно прослушанные треки -->
            <div class="card mb-4">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="fas fa-history me-2"></i> Недавно прослушанные</h5>
                </div>
                <div class="card-body">
                    <div class="recent-tracks">
                        <div class="recent-track-item">
                            <i class="fas fa-play recent-track-icon"></i>
                            <div class="recent-track-info">
                                <span class="recent-track-title">Название трека</span>
                                <span class="recent-track-artist">Исполнитель</span>
                            </div>
                            <span class="recent-track-time">5 мин назад</span>
                        </div>
                        <div class="text-center py-3">
                            <p class="text-muted mb-0">Начните слушать музыку, и здесь появится история прослушиваний</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Мои треки (только для музыкантов) -->
            @if (Model.Role == MusicStreamingService.Models.UserRole.Musician)
            {
                <div class="card mt-4">
                    <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="fas fa-cloud-upload-alt me-2"></i> Мои загруженные треки</h5>
                        <a href="/Tracks/Create" class="btn btn-sm btn-light">
                            <i class="fas fa-plus me-1"></i> Загрузить новый трек
                        </a>
                    </div>
                    <div class="card-body">
                        @if (ViewBag.MusicianTracks != null && ((List<MusicStreamingService.Models.Track>)ViewBag.MusicianTracks).Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover table-sm">
                                    <thead>
                                        <tr>
                                            <th>Название</th>
                                            <th>Жанр</th>
                                            <th>Длительность</th>
                                            <th>Статус модерации</th>
                                            <th>Комментарий</th>
                                            <th>Дата</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var track in (List<MusicStreamingService.Models.Track>)ViewBag.MusicianTracks)
                                        {
                                            var statusClass = "";
                                            var statusText = "";

                                            if (!track.IsModerated && track.LatestModeration != null && track.LatestModeration.Status == MusicStreamingService.Models.ModerationStatus.Pending)
                                            {
                                                statusClass = "warning";
                                                statusText = "На модерации";
                                            }
                                            else if (track.LatestModeration != null && track.LatestModeration.Status == MusicStreamingService.Models.ModerationStatus.Approved)
                                            {
                                                statusClass = "success";
                                                statusText = "Одобрен";
                                            }
                                            else if (track.LatestModeration != null && track.LatestModeration.Status == MusicStreamingService.Models.ModerationStatus.Rejected)
                                            {
                                                statusClass = "danger";
                                                statusText = "Отклонен";
                                            }
                                            else
                                            {
                                                statusClass = "secondary";
                                                statusText = "Неизвестно";
                                            }

                                            <tr>
                                                <td>
                                                    <strong>@track.Title</strong>
                                                    @if (track.Album != null)
                                                    {
                                                        <br>
                                                        <small class="text-muted">@track.Album.Title</small>
                                                    }
                                                </td>
                                                <td>@track.Genre?.Name</td>
                                                <td>@TimeSpan.FromSeconds(track.Duration).ToString(@"mm\:ss")</td>
                                                <td>
                                                    <span class="badge bg-@statusClass">@statusText</span>
                                                </td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(track.ModerationComment))
                                                    {
                                                        <small class="text-muted">@track.ModerationComment</small>
                                                    }
                                                    else
                                                    {
                                                        <small class="text-muted">-</small>
                                                    }
                                                </td>
                                                <td>
                                                    <small class="text-muted">
                                                        @if (track.LatestModeration != null)
                                                        {
                                                            @track.LatestModeration.ModerationDate.ToString("dd.MM.yy")
                                                        }
                                                        else
                                                        {
                                                            @:-
                                                        }
                                                    </small>
                                                </td>
                                                <td>
                                                    @if (track.IsModerated)
                                                    {
                                                        <a href="/Tracks/Play/@track.Id" class="btn btn-sm btn-outline-primary">
                                                            <i class="fas fa-play"></i>
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <button class="btn btn-sm btn-outline-secondary" disabled title="Ожидает модерации">
                                                            <i class="fas fa-clock"></i>
                                                        </button>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <!-- Статистика -->
                            <div class="mt-3">
                                @{
                                    var tracksList = (List<MusicStreamingService.Models.Track>)ViewBag.MusicianTracks;
                                    var approvedCount = tracksList.Count(t => t.IsModerated && t.LatestModeration?.Status == MusicStreamingService.Models.ModerationStatus.Approved);
                                    var pendingCount = tracksList.Count(t => !t.IsModerated && t.LatestModeration.Status == MusicStreamingService.Models.ModerationStatus.Pending);
                                    var rejectedCount = tracksList.Count(t => t.LatestModeration?.Status == MusicStreamingService.Models.ModerationStatus.Rejected);
                                    var totalCount = tracksList.Count;
                                }

                                <div class="row text-center">
                                    <div class="col-md-3">
                                        <div class="stat-box bg-primary text-white p-2 rounded">
                                            <h5 class="mb-0">@totalCount</h5>
                                            <small>Всего треков</small>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="stat-box bg-success text-white p-2 rounded">
                                            <h5 class="mb-0">@approvedCount</h5>
                                            <small>Одобрено</small>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="stat-box bg-warning text-white p-2 rounded">
                                            <h5 class="mb-0">@pendingCount</h5>
                                            <small>На модерации</small>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="stat-box bg-danger text-white p-2 rounded">
                                            <h5 class="mb-0">@rejectedCount</h5>
                                            <small>Отклонено</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i class="fas fa-upload fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">У вас еще нет загруженных треков</h5>
                                <p class="text-muted mb-3">Как музыкант вы можете загружать свои треки на платформу</p>
                                <a href="/Tracks/Create" class="btn btn-info">
                                    <i class="fas fa-upload me-1"></i> Загрузить первый трек
                                </a>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Модальное окно создания плейлиста -->
<div class="modal fade" id="createPlaylistModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Создать новый плейлист</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="createPlaylistForm">
                    <div class="mb-3">
                        <label for="playlistName" class="form-label">Название плейлиста</label>
                        <input type="text" class="form-control" id="playlistName" placeholder="Введите название плейлиста" required>
                    </div>
                    <div class="mb-3">
                        <label for="playlistDescription" class="form-label">Описание (необязательно)</label>
                        <textarea class="form-control" id="playlistDescription" rows="3" placeholder="Добавьте описание плейлиста"></textarea>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="playlistPrivate">
                        <label class="form-check-label" for="playlistPrivate">
                            Сделать плейлист приватным
                        </label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                <button type="button" class="btn btn-primary" onclick="createPlaylist()">Создать плейлист</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        // Функция создания плейлиста
        function createPlaylist() {
            const name = document.getElementById('playlistName').value;
            const description = document.getElementById('playlistDescription').value;
            const isPrivate = document.getElementById('playlistPrivate').checked;

            if (!name.trim()) {
                alert('Пожалуйста, введите название плейлиста');
                return;
            }

            console.log('Создание плейлиста:', { name, description, isPrivate });

            // Закрываем модальное окно
            const modal = bootstrap.Modal.getInstance(document.getElementById('createPlaylistModal'));
            modal.hide();

            // Показываем сообщение об успехе
            alert('Плейлист создан успешно!');

            // Обновляем страницу (в реальном приложении - динамически добавляем плейлист)
            setTimeout(() => {
                window.location.reload();
            }, 1000);
        }

        // Инициализация модального окна
        document.addEventListener('DOMContentLoaded', function() {
            const modalElement = document.getElementById('createPlaylistModal');
            if (modalElement) {
                modalElement.addEventListener('shown.bs.modal', function () {
                    document.getElementById('playlistName').focus();
                });
            }
        });

            // Обработка клика по карточке плейлиста
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.playlist-card-small').forEach(card => {
                card.addEventListener('click', function(e) {
                    // Если клик был по ссылке внутри карточки, не предотвращаем переход
                    if (e.target.tagName === 'A' || e.target.closest('a')) {
                        return;
                    }

                    // Находим ссылку внутри карточки и переходим по ней
                    const link = this.closest('a');
                    if (link) {
                        window.location.href = link.href;
                    }
                });
            });
        });
    </script>
}

@functions {
    // Функция для получения класса бейджа по роли
    string GetRoleBadgeClass(MusicStreamingService.Models.UserRole role)
    {
        return role switch
        {
            MusicStreamingService.Models.UserRole.Admin => "bg-warning text-dark",
            MusicStreamingService.Models.UserRole.Musician => "bg-info text-white",
            MusicStreamingService.Models.UserRole.Subscriber => "bg-primary text-white",
            MusicStreamingService.Models.UserRole.User => "bg-secondary text-white",
            _ => "bg-secondary text-white"
        };
    }

    // Функция для отображения имени роли
    string GetRoleDisplayName(MusicStreamingService.Models.UserRole role)
    {
        return role switch
        {
