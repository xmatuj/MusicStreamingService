@model MusicStreamingService.Models.AddToPlaylistViewModel

<div class="modal fade" id="addToPlaylistModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Добавить в плейлист</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Трек: <strong>@Model.TrackTitle</strong></p>

                @if (Model.UserPlaylists.Any())
                {
                    <div class="list-group">
                        @foreach (var playlist in Model.UserPlaylists)
                        {
                            <form method="post" action="/Playlists/AddTrack" class="list-group-item">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="playlistId" value="@playlist.Id" />
                                <input type="hidden" name="trackId" value="@Model.TrackId" />

                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1">@playlist.Title</h6>
                                        <small>@playlist.PlaylistTracks.Count треков</small>
                                    </div>
                                    <button type="submit" class="btn btn-sm btn-primary">
                                        <i class="fas fa-plus"></i> Добавить
                                    </button>
                                </div>
                            </form>
                        }
                    </div>
                }

                <div class="mt-3">
                    <a href="/Playlists/Create?trackId=@Model.TrackId" class="btn btn-outline-primary w-100">
                        <i class="fas fa-plus me-1"></i> Создать новый плейлист
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>