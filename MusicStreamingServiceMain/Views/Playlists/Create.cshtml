@model MusicStreamingService.Models.PlaylistCreateViewModel
@{
    ViewData["Title"] = "Создание плейлиста";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center mb-0">Создание нового плейлиста</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div class="form-group mb-3">
                            <label asp-for="Title" class="form-label">Название плейлиста *</label>
                            <input asp-for="Title" class="form-control" placeholder="Мой новый плейлист" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label">Описание</label>
                            <textarea asp-for="Description" class="form-control" rows="3"
                                      placeholder="Расскажите о вашем плейлисте..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <div class="form-check">
                                <input asp-for="IsPublic" class="form-check-input" />
                                <label asp-for="IsPublic" class="form-check-label">
                                    Сделать плейлист публичным
                                </label>
                                <small class="form-text text-muted d-block">
                                    Публичные плейлисты видны другим пользователям
                                </small>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">Отмена</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-plus-circle me-1"></i> Создать плейлист
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}