@model List<MusicStreamingService.Models.Playlist>
@{
    ViewData["Title"] = "Мои плейлисты";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Мои плейлисты</h2>
        @if (ViewBag.CanCreatePlaylists)
        {
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus-circle me-1"></i> Создать плейлист
            </a>
        }
        else
        {
            <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#subscriptionRequiredModal">
                <i class="fas fa-plus-circle me-1"></i> Создать плейлист
            </button>
        }
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var playlist in Model)
            {
                <div class="col-md-4 col-lg-3 mb-4">
                    <div class="card h-100 playlist-card">
                        <div class="playlist-cover position-relative">
                            @if (playlist.PlaylistTracks.Any())
                            {
                                <div class="cover-image" style="background-color: #6c757d; height: 150px;">
                                    <i class="fas fa-music fa-3x text-white position-absolute top-50 start-50 translate-middle"></i>
                                </div>
                            }
                            else
                            {
                                <div class="cover-image empty-cover" style="background-color: #e9ecef; height: 150px;">
                                    <i class="fas fa-music fa-3x text-secondary position-absolute top-50 start-50 translate-middle"></i>
                                </div>
                            }
                            <div class="playlist-info-overlay">
                                <span class="badge @(playlist.Visibility == MusicStreamingService.Models.PlaylistVisibility.Public ? "bg-success" : "bg-secondary")">
                                    @playlist.Visibility
                                </span>
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@playlist.Title</h5>
                            @if (!string.IsNullOrEmpty(playlist.Description))
                            {
                                <p class="card-text text-muted small">@playlist.Description</p>
                            }
                            <div class="playlist-meta">
                                <small class="text-muted">
                                    <i class="fas fa-music me-1"></i> @playlist.TrackCount треков
                                </small>
                                <br>
                                <small class="text-muted">
                                    <i class="fas fa-calendar me-1"></i> @playlist.CreatedDate.ToString("dd.MM.yyyy")
                                </small>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-top-0">
                            <div class="d-flex justify-content-between">
                                <a asp-action="Details" asp-route-id="@playlist.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-play"></i> Открыть
                                </a>
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button"
                                            data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-ellipsis-v"></i>
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a asp-action="Edit" asp-route-id="@playlist.Id" class="dropdown-item">
                                                <i class="fas fa-edit me-2"></i> Редактировать
                                            </a>
                                        </li>
                                        <li>
                                            <form asp-action="Delete" asp-route-id="@playlist.Id" method="post"
                                                  onsubmit="return confirm('Удалить плейлист?');" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="dropdown-item text-danger">
                                                    <i class="fas fa-trash me-2"></i> Удалить
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-music fa-4x text-muted mb-3"></i>
            <h4 class="text-muted">У вас еще нет плейлистов</h4>
            <p class="text-muted mb-4">Создайте свой первый плейлист и добавьте в него любимые треки</p>
            @if (ViewBag.CanCreatePlaylists)
            {
                <a asp-action="Create" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus-circle me-2"></i> Создать первый плейлист
                </a>
            }
            else
            {
                <button class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#subscriptionRequiredModal">
                    <i class="fas fa-plus-circle me-2"></i> Создать первый плейлист
                </button>
            }
        </div>
    }
</div>

<!-- Модальное окно "Требуется подписка" -->
<div class="modal fade" id="subscriptionRequiredModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Требуется подписка</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="text-center mb-4">
                    <i class="fas fa-crown fa-4x text-warning mb-3"></i>
                    <h4>Создание плейлистов доступно только подписчикам</h4>
                    <p class="text-muted">Приобретите подписку, чтобы получить возможность создавать и управлять плейлистами</p>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="card text-center h-100">
                            <div class="card-body">
                                <h5 class="card-title">🎵 Базовый</h5>
                                <p class="card-text">Слушайте музыку без ограничений</p>
                                <p class="h4">₽199<span class="text-muted small">/месяц</span></p>
                                <button class="btn btn-outline-primary w-100" disabled>Текущий план</button>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="card text-center h-100 border-primary">
                            <div class="card-body">
                                <h5 class="card-title">👑 Премиум</h5>
                                <p class="card-text">Плейлисты + премиум функции</p>
                                <p class="h4">₽399<span class="text-muted small">/месяц</span></p>
                                <a href="#" class="btn btn-primary w-100">Выбрать план</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .playlist-card {
            transition: transform 0.2s;
            cursor: pointer;
        }

            .playlist-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            }

        .playlist-cover {
            overflow: hidden;
            border-radius: 0.375rem 0.375rem 0 0;
        }

        .cover-image {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .playlist-info-overlay {
            position: absolute;
            top: 10px;
            right: 10px;
        }

        .empty-cover {
            opacity: 0.5;
        }
    </style>
}