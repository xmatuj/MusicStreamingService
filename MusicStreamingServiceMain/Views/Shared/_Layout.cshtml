@using System.Security.Claims﻿
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MusicStreamingServiceMain</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MusicStreamingServiceMain.styles.css" asp-append-version="true" />
</head>
<body>
    <script>
        // Простая проверка - если пользователь не администратор, музыкант или подписчик, показываем рекламу
        window.shouldShowAd = @((!User.IsInRole("Admin") && !User.IsInRole("Musician") && !User.IsInRole("Subscriber")).ToString().ToLower());
        console.log('Should show ad:', window.shouldShowAd);
    </script>>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Музыкальный стриминг</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Subscription" asp-action="Plans">
                                <i class="fas fa-crown text-warning"></i> Подписка
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Tracks" asp-action="Create">Добавить трек</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Playlists" asp-action="Index">Мои плейлисты</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index">Панель управления</a>
                            </li>
                        }
                        <li class="nav-item">
                            <form class="d-flex" asp-controller="Search" asp-action="Index" method="get">
                                <input class="form-control me-2" type="search" name="query"
                                       placeholder="Поиск..." aria-label="Поиск">
                                <button class="btn btn-outline-success" type="submit">Поиск</button>
                            </form>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <!-- Проверяем есть ли активная подписка -->
                            @if (User.IsInRole("Subscriber"))
                            {
                                <li class="nav-item">
                                    <span class="nav-link text-success">
                                        <i class="fas fa-crown me-1"></i> Премиум
                                    </span>
                                </li>
                            }
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user"></i> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" href="/Account/Profile">Мой профиль</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="dropdown-item p-0">
                                            <button type="submit" class="btn btn-link text-dark w-100 text-start">
                                                <i class="fas fa-sign-out-alt"></i> Выйти
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Account/Login">Войти</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary ms-2" href="/Account/Register">Регистрация</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Mayorov M. PRI-123
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/playlists.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Модальное окно рекламы -->
    <div class="modal fade" id="advertisementModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-warning">
                    <h5 class="modal-title">
                        <i class="fas fa-ad me-2"></i> Реклама
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="text-center mb-3">
                        <i class="fas fa-megaphone fa-3x text-warning mb-3"></i>
                        <h4>Слушайте музыку без рекламы!</h4>
                        <p class="text-muted">Оформите подписку и наслаждайтесь музыкой без прерываний</p>
                    </div>

                    <div class="card mb-3">
                        <div class="card-body">
                            <h5>🎵 Музыкальный магазин "Melody"</h5>
                            <p>Лучшие музыкальные инструменты и оборудование со скидкой 20% по промокоду <strong>MUSIC2024</strong></p>
                            <small class="text-muted">Сайт: melody-store.com | Тел: 8-800-555-35-35</small>
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <small>
                            <i class="fas fa-info-circle me-1"></i>
                            Реклама помогает поддерживать бесплатный доступ к музыке
                        </small>
                    </div>

                    <div class="text-center mt-3">
                        <a href="/Subscription/Plans" class="btn btn-primary btn-sm">
                            <i class="fas fa-crown me-1"></i> Оформить подписку без рекламы
                        </a>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">
                        Закрыть через <span id="adTimer">5</span>с
                    </button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>