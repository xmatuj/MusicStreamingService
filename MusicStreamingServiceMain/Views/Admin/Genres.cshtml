@model List<MusicStreamingService.Models.Genre>
@{
    ViewData["Title"] = "Управление жанрами";
}

<div class="container">
    <h2>Управление жанрами</h2>

    <!-- Форма добавления жанра -->
    <div class="card mb-4">
        <div class="card-header">
            <h5>Добавить новый жанр</h5>
        </div>
        <div class="card-body">
            <form method="post" asp-action="CreateGenre">
                <div class="row">
                    <div class="col-md-8">
                        <input type="text" name="name" class="form-control" placeholder="Название жанра" required>
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-primary">Добавить жанр</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Список жанров -->
    <div class="card">
        <div class="card-header">
            <h5>Существующие жанры</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="row">
                    @foreach (var genre in Model)
                    {
                        <div class="col-md-3 mb-3">
                            <div class="card">
                                <div class="card-body text-center">
                                    <h5 class="card-title">@genre.Name</h5>
                                    <small class="text-muted">ID: @genre.Id</small>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted">Жанры еще не добавлены</p>
            }
        </div>
    </div>

    <div class="mt-3">
        <a href="/Admin" class="btn btn-secondary">← Назад в админку</a>
        <a href="/Tracks/Create" class="btn btn-success">Добавить трек</a>
    </div>
</div>