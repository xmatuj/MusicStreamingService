@model List<MusicStreamingService.Models.User>
@{
    ViewData["Title"] = "Управление пользователями";
}

<div class="container">
    <h2>Управление пользователями</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    <!-- Поиск -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="Users" class="row g-3">
                <div class="col-md-8">
                    <input type="text" name="search" class="form-control" placeholder="Поиск по имени, email или роли..."
                           value="@ViewBag.Search" />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">Поиск</button>
                </div>
                <div class="col-md-2">
                    <a asp-action="Users" class="btn btn-secondary w-100">Сброс</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Таблица пользователей -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Имя пользователя</th>
                            <th>Email</th>
                            <th>Роль</th>
                            <th>Дата регистрации</th>
                            <th>Может загружать треки?</th>
                            <th>Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Id</td>
                                <td>@user.Username</td>
                                <td>@user.Email</td>
                                <td>
                                    <span class="badge @GetRoleBadgeClass(user.Role)">
                                        @user.Role
                                    </span>
                                </td>
                                <td>@user.DateOfCreated.ToString("dd.MM.yyyy")</td>
                                <td>
                                    @if (user.CanUploadTracks)
                                    {
                                        <span class="badge bg-success">Да</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Нет</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        @if (user.Role != MusicStreamingService.Models.UserRole.Musician)
                                        {
                                            <form method="post" asp-action="SetAsMusician" class="d-inline">
                                                <input type="hidden" name="id" value="@user.Id" />
                                                <button type="submit" class="btn btn-sm btn-info"
                                                        title="Назначить музыкантом (может загружать треки)">
                                                    <i class="fas fa-music"></i> Музыкант
                                                </button>
                                            </form>
                                        }
                                        @if (user.Role != MusicStreamingService.Models.UserRole.Admin)
                                        {
                                            <form method="post" asp-action="SetAsAdmin" class="d-inline">
                                                <input type="hidden" name="id" value="@user.Id" />
                                                <button type="submit" class="btn btn-sm btn-warning"
                                                        onclick="return confirm('Назначить администратором?')"
                                                        title="Назначить администратором">
                                                    <i class="fas fa-crown"></i> Админ
                                                </button>
                                            </form>
                                        }
                                        @if (user.Role != MusicStreamingService.Models.UserRole.User)
                                        {
                                            <form method="post" asp-action="SetAsUser" class="d-inline">
                                                <input type="hidden" name="id" value="@user.Id" />
                                                <button type="submit" class="btn btn-sm btn-secondary"
                                                        title="Назначить обычным пользователем">
                                                    <i class="fas fa-user"></i> Обычный
                                                </button>
                                            </form>
                                        }
                                        @if (user.Role != MusicStreamingService.Models.UserRole.Subscriber)
                                        {
                                            <form method="post" asp-action="SetAsSubscriber" class="d-inline">
                                                <input type="hidden" name="id" value="@user.Id" />
                                                <button type="submit" class="btn btn-sm btn-primary"
                                                        title="Назначить подписчиком">
                                                    <i class="fas fa-star"></i> Подписчик
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">← В админку</a>
    </div>
</div>

@functions {
    string GetRoleBadgeClass(MusicStreamingService.Models.UserRole role)
    {
        return role switch
        {
            MusicStreamingService.Models.UserRole.Admin => "bg-warning",
            MusicStreamingService.Models.UserRole.Musician => "bg-info",
            MusicStreamingService.Models.UserRole.Subscriber => "bg-primary",
            MusicStreamingService.Models.UserRole.User => "bg-secondary",
            _ => "bg-secondary"
        };
    }
}