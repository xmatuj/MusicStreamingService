@model List<MusicStreamingService.Models.Track>
@{
    ViewData["Title"] = "Модерация треков";
}

<div class="container">
    <h2>Треки на модерации</h2>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Название</th>
                        <th>Исполнитель</th>
                        <th>Жанр</th>
                        <th>Длительность</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var track in Model)
                    {
                        <tr>
                            <td>@track.Id</td>
                            <td>
                                <strong>@track.Title</strong>
                                @if (!string.IsNullOrEmpty(track.Album?.Title))
                                {
                                    <br>
                                    <small class="text-muted">Альбом: @track.Album.Title</small>
                                }
                            </td>
                            <td>@track.Artist?.Name</td>
                            <td>@track.Genre?.Name</td>
                            <td>@TimeSpan.FromSeconds(track.Duration).ToString(@"mm\:ss")</td>
                            <td>
                                <a href="/Moderation/Review/@track.Id" class="btn btn-primary btn-sm">Просмотреть</a>
                                <form method="post" action="/Moderation/Approve/@track.Id" class="d-inline">
                                    <button type="submit" class="btn btn-success btn-sm">Одобрить</button>
                                </form>
                                <form method="post" action="/Moderation/Reject/@track.Id" class="d-inline">
                                    <button type="submit" class="btn btn-danger btn-sm">Отклонить</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <h5>Нет треков для модерации</h5>
            <p>Все треки проверены и одобрены.</p>
        </div>
    }

    <div class="mt-3">
        <a href="/Moderation/History" class="btn btn-secondary">История модераций</a>
        <a href="/Admin" class="btn btn-outline-secondary">← В админку</a>
    </div>
</div>